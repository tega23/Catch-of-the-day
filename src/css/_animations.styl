/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background-color red 
  transition all 0.5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    background green
    max-height 60px
    padding 2rem 0 !important 
    transform translateX(0);


.order-leave
  transition all 0.5
  transform translateX(0);

  &.order-leave-active
    transform translateX(120%)
     max-height 0
     padding 0


.count-enter
  
  &.count-enter-active

.count-leave
  &.count-leave-active
    